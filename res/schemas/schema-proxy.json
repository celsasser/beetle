{
	"$id": "schema://beetle/schema-proxy.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"required": [
		"actions",
		"proxy"
	],
	"additionalProperties": false,
	"properties": {
		"actions": {
			"type": "array",
			"minItems": 1,
			"items": {
				"anyOf": [
					{
						"$ref": "schema-library.json#/proxy/actionForward"
					},
					{
						"$ref": "schema-library.json#/proxy/actionLog"
					},
					{
						"$ref": "schema-library.json#/proxy/actionResponse"
					}
				]
			}
		},
		"id": {
			"type": "string"
		},
		"proxy": {
			"type": "object",
			"required": [
				"method",
				"path"
			],
			"additionalProperties": false,
			"properties": {
				"method": {
					"$ref": "schema-library.json#/http/method"
				},
				"path": {
					"type": "string"
				},
				"protocol": {
					"$ref": "schema-library.json#/http/protocol"
				}
			}
		}
	}
}
