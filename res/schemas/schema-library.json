{
	"$id": "schema://beetle/schema-library.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"http": {
		"method": {
			"enum": [
				"all",
				"delete",
				"get",
				"head",
				"options",
				"patch",
				"post",
				"put"
			]
		},
		"protocol": {
			"enum": [
				"http",
				"https"
			]
		}
	},
	"proxy": {
		"actionType": {
			"enum": [
				"forward",
				"log",
				"respond"
			]
		},
		"actionForward": {
			"type": "object",
			"required": [
				"method",
				"type",
				"url"
			],
			"additionalProperties": false,
			"properties": {
				"method": {
					"$ref": "#/http/method"
				},
				"type": {
					"pattern": "^forward$"
				},
				"url": {
					"type": "string"
				}
			}
		},
		"actionLog": {
			"type": "object",
			"required": [
				"type"
			],
			"additionalProperties": false,
			"properties": {
				"type": {
					"pattern": "^log$"
				}
			}
		},
		"actionResponse": {
			"type": "object",
			"required": [
				"response",
				"type"
			],
			"additionalProperties": false,
			"properties": {
				"response": {
					"$ref": "#/proxy/response"
				},
				"type": {
					"pattern": "^response$"
				}
			}
		},
		"response": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"body": {
					"type": "object"
				},
				"contentType": {
					"type": "string"
				},
				"headers": {
					"type": "object"
				},
				"statusCode": {
					"type": "number"
				}
			}
		}
	}
}
